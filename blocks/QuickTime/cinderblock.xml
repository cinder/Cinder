<?xml version="1.0" encoding="UTF-8" ?>
<cinder>
<block
	name="QuickTime"
	id="org.libcinder.quicktime"
	author="Cinder Project"
	summary="QuickTime support for Mac OS X and Windows."
	core="true"
	>
	<supports os="msw" />
	<supports os="macosx" />
	<platform os="macosx">
		<framework sdk="true">QuickTime.framework</framework>
	</platform>
	<platform os="msw">
		<includePath>include/msw</includePath>
		<staticLibrary>lib/msw/CVClient.lib</staticLibrary>
		<staticLibrary>lib/msw/QTMLClient.lib</staticLibrary>
	</platform>
	<copyExclude>samples</copyExclude>
	<includePath>include</includePath>	
</block>
</cinder>